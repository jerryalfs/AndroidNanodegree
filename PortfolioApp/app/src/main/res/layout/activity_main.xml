<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/nanodegree_apps"
                android:id="@+id/textView"
                android:layout_marginTop="23dp"
                android:layout_gravity="center_horizontal" />

            <Button
                style="@style/PortfolioButton"
                android:text="@string/popular_movies_app"
                android:id="@+id/popular_movies_button" />

            <Button
                style="@style/PortfolioButton"
                android:text="@string/scores_app"
                android:id="@+id/scores_button"/>

            <Button
                style="@style/PortfolioButton"
                android:text="@string/library_app"
                android:id="@+id/library_button"/>

            <Button
                style="@style/PortfolioButton"
                android:text="@string/build_it_bigger_app"
                android:id="@+id/build_it_bigger_button"/>

            <Button
                style="@style/PortfolioButton"
                android:text="@string/xyz_reader_app"
                android:id="@+id/xyz_reader_button"/>

            <Button
                style="@style/PortfolioButton"
                android:text="@string/capstone_app"
                android:id="@+id/capstone_button"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
