<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular Movies"
        android:id="@+id/popular_movies_button"
        android:layout_marginTop="5dp"
        android:background="@drawable/state_button"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:id="@+id/scores_button"
        android:background="@drawable/state_button"
        android:layout_below="@+id/popular_movies_button"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignRight="@+id/popular_movies_button"
        android:layout_alignEnd="@+id/popular_movies_button"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/library_button"
        android:background="@drawable/state_button"
        android:layout_below="@+id/scores_button"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignRight="@+id/scores_button"
        android:layout_alignEnd="@+id/scores_button"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:id="@+id/build_it_bigger_button"
        android:background="@drawable/state_button"
        android:layout_below="@+id/library_button"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/xyz_reader_button"
        android:background="@drawable/state_button"
        android:layout_below="@+id/build_it_bigger_button"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignRight="@+id/build_it_bigger_button"
        android:layout_alignEnd="@+id/build_it_bigger_button"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone: My Own App"
        android:id="@+id/capstone_button"
        android:background="@drawable/state_button"
        android:layout_below="@+id/xyz_reader_button"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignRight="@+id/xyz_reader_button"
        android:layout_alignEnd="@+id/xyz_reader_button"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />

</RelativeLayout>
